gBkmrksTitle		= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/BrokenBookmarks' );
gLinkAnnotsTitle	= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/BrokenLinkAnnots' );

gUnusedDestsTitle	= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/UnusedDests' );
gRemoveTitle		= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/Remove' );
gFlattenTitle		= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/Flatten' );
gFlattenAllTitle	= zstring_width( zstring: '$$$/Dialogs/SpaceReductionOptions/FlattenAll' );

gLabelItemWidth		= max( gBkmrksTitle, gLinkAnnotsTitle, gUnusedDestsTitle, gRemoveTitle,
						   gFlattenTitle, gFlattenAllTitle ) + max_char_width();

dialog( name: '$$$/Dialogs/SpaceReductionOptions' )
{
	group()
	{
		cluster( name: '$$$/Dialogs/SpaceReductionOptions/ClusterLabel', 
				 child_horizontal: align_proportional,
				 align_children: align_left )
		{
			check_box( item_id: 'bkmk', name: '$$$/Dialogs/SpaceReductionOptions/BrokenBookmarks', width: gLabelItemWidth );
			check_box( item_id: 'blan', name: '$$$/Dialogs/SpaceReductionOptions/BrokenLinkAnnots', width: gLabelItemWidth );
		}

		gap();

		cluster( name: '$$$/Dialogs/SpaceReductionOptions/DestsClusterLabel', 
				 child_horizontal: align_proportional, align_children: align_left )
		{
			check_box( item_id: 'unud', name: '$$$/Dialogs/SpaceReductionOptions/UnusedDests', width: gLabelItemWidth );
			group( alignment: align_right )
			{
				radio( item_id: 'remv', group_id: 'rgrp', name: '$$$/Dialogs/SpaceReductionOptions/Remove', width: gLabelItemWidth );
				radio( item_id: 'fltn', group_id: 'rgrp', name: '$$$/Dialogs/SpaceReductionOptions/Flatten', width: gLabelItemWidth );
				radio( item_id: 'flna', group_id: 'rgrp', name: '$$$/Dialogs/SpaceReductionOptions/FlattenAll', width: gLabelItemWidth );
			}
		}

		gap();

		ok_cancel();
	}
}
