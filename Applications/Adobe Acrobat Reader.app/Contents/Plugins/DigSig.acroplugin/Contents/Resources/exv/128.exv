dialog( name: '$$$/Dialogs/DigSigSecPrefs', target_id: 'Hdlr', horizontal: align_fill )
{
	view( alignment: align_fill )
	{
		cluster( name: '$$$/Dialogs/DigSigSecPrefs/SecSettingsMain', alignment: align_fill, margin_height: 24, dheight: gPrefsPanelHeight, dwidth: gPrefsPanelWidth )
		{
			cluster(name: '$$$/Dialogs/DigSigSecPrefs/ConfigServerSettings', alignment: align_fill, margin_height: 24 )
			{
				view(alignment: align_fill, align_children: align_top)
				{
					view ( align_children: align_left )
					{
						static_text( item_id: 'tsde', name: '$$$/Dialogs/DigSigSecPrefs/ConfigServerSettingsDescriptionTSServers');
						static_text( item_id: 'dsde', name: '$$$/Dialogs/DigSigSecPrefs/ConfigServerSettingsDescriptionDirServers');
						static_text( item_id: 'lcde', name: '$$$/Dialogs/DigSigSecPrefs/ConfigServerSettingsDescriptionLCServers');
					}
					view ( align_children: align_right, alignment: align_fill )
					{
						button( alignment: align_right, item_id: 'moIT', name: '$$$/Dialogs/DigSigSecPrefs/MoreSSButtonLabel' );
					}
				}
			}
			
			cluster( item_id: 'ssSe', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings', alignment: align_fill, margin_height: 24 )
			{
				view( alignment: align_center, align_children: align_top )
				{
					button ( item_id: 'ipSS', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/ImportSS' );
					button ( item_id: 'exSS', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/ExportSS' );
				}
				view(alignment: align_fill, align_children: align_row )
				{
					gap( width: 10 );
					view()
					{
						check_box( item_id: 'ssLo', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Load' );

						view(item_id: 'ssGr')
						{
							view( alignment: align_fill, align_children: align_top )
							{
								static_text( alignment: align_left, name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/URL' );
								edit_text( item_id: 'ssUR', alignment: align_fill, width: 100 );
							}
							view( alignment: align_fill, align_children: align_top )
							{
								static_text( alignment: align_left, name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Signed');
								popup( alignment: align_fill, item_id: 'ssSi', name: 'IDS_SECURITY_SETTINGS_ALLOW_ANY_CERTIFICATE' );
								button( alignment: align_right, item_id: 'ssBr', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Browse' );
							}
							view( alignment: align_fill, align_children: align_top )
							{
								static_text( item_id: 'ssCh', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Check' );
						
								group()
								{
									radio( group_id: 'ssTi', item_id: 'ssWe', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Week' );
									radio( group_id: 'ssTi', item_id: 'ssFo', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Fortnight' );
								}
						
								group()
								{
									radio( group_id: 'ssTi', item_id: 'ssMo', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Month' );
									radio( group_id: 'ssTi', item_id: 'ssQu', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Quarter' );
								}
						
								group()
								{
									static_text();
									check_box( item_id: 'ssAs', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Ask' );
								}
						
								button( alignment: align_right, item_id: 'ssUp', name: '$$$/Dialogs/DigSigSecPrefs/SecuritySettings/Update' );
							}
						}
					}
				}
			}

			cluster( name:'$$$/Dialogs/DigSigSecPrefs/CryptoSettings',item_id: 'csCP', alignment: align_fill, margin_height: 24 )
			{
				check_box( item_id: 'cryp', name: '$$$/Dialogs/DigSigSecPrefs/CryptoSettings/Crypto' );
			}

			cluster( name:'$$$/Dialogs/DigSigSecPrefs/PPKLiteSettings', alignment: align_fill, margin_height: 24 )
			{
				button( alignment: align_center, item_id: 'ssRM', name: '$$$/Dialogs/DigSigSecPrefs/PPKLiteSettings/ClearButton' );
			}
			cluster( name:'$$$/Dialogs/DigSigSecPrefs/MSRMSSettings',item_id: 'csMS', alignment: align_fill, margin_height: 24 )
			{
				check_box( item_id: 'emip', name: '$$$/Dialogs/DigSigSecPrefs/MSRMSSettings/EnableMIP' );
				button( alignment: align_center, item_id: 'ssMS', name: '$$$/Dialogs/DigSigSecPrefs/MSRMSSettings/ClearButton' );
			}
		}
	}
}