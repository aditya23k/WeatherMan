			view(alignment: align_fill, align_children: align_row)
			{
				view(align_children: align_right, width: gPromptWidth)
				{
					static_text(name: '$$$/Dialogs/eEnvelope/Identity/OrgUnit');
				}
				edit_text(item_id: 'orgU', width: theEditWidth);
			}
			
			view(alignment: align_fill, align_children: align_row)
			{
				view(align_children: align_right, width: gPromptWidth)
				{
					static_text(name: '$$$/Dialogs/eEnvelope/Identity/Email');
				}
				edit_text(item_id: 'mail', width: theEditWidth);
			}
		}
		
		check_box(item_id: 'show', name: '$$$/Dialogs/eEnvelope/Identity/DoNotShow');
		gap(dheight: gStaticTextHeight*2);
