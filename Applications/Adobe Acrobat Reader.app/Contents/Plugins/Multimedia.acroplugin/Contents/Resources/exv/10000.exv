dialog( name: '$$$/Dialogs/MultimediaPrefs', margin_height: 0, margin_width: 0 )
{
	view( align_children: align_left )
	{
		cluster( name: '$$$/Dialogs/MultimediaPrefs/PlayerOptions', alignment: align_fill, dwidth: gPrefsPanelWidth )
		{
			view( align_children: align_row )
			{
				static_text(name: '$$$/Dialogs/MultimediaPrefs/PopUpMenuTitle', alignment: align_right );
				popup(item_id: 'pmpp', width: zstring_width(zstring: '$$$/Dialogs/MultimediaPrefs/TitlePlaceholder' ), alignment: align_left );
			}
			view( align_children: align_left){
				check_box(item_id: 'cont', name:'$$$/Dialogs/MultimediaPrefs/Accessibility/Controls');
				check_box(item_id: 'qtpp', name:'$$$/Dialogs/MultimediaPrefs/QuickTimeUsage');
				link_text(item_id: 'qtpl', name:'$$$/Dialogs/MultimediaPrefs/QuickTimeUsageLink');
			}
		}
		
		cluster( name: '$$$/Dialogs/MultimediaPrefs/Accessibility', align_children: align_left, alignment: align_fill, dwidth: gPrefsPanelWidth )
		{
			check_box(item_id: 'subt', name:'$$$/Dialogs/MultimediaPrefs/Accessibility/Subtitle');
			check_box(item_id: 'odub', name:'$$$/Dialogs/MultimediaPrefs/Accessibility/Overdub');
			check_box(item_id: 'cpti', name:'$$$/Dialogs/MultimediaPrefs/Accessibility/Caption');
			check_box(item_id: 'audi', name:'$$$/Dialogs/MultimediaPrefs/Accessibility/DescAudio');
			view(align_children: align_row)
			{
				static_text(name:'$$$/Dialogs/MultimediaPrefs/Accessibility/Language', alignment: align_right);
				popup(item_id: 'lang', width:  zstring_width(zstring: '$$$/Dialogs/MultimediaPrefs/Accessibility/LanguagePlaceholder'), alignment: align_left);
			}
			gap();
		}
	}
}
